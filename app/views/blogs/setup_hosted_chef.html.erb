			<h4>Vagrant File</h4>
			<div class="container">
				<script type="syntaxhighlighter" class="brush: ruby;"><![CDATA[
					Vagrant::Config.run do |config|
						config.vm.box = "precise64"
						config.vm.box_url = "http://files.vagrantup.com/precise64.box"
						config.vm.network :hostonly, "192.168.33.10"
						config.vm.share_folder("v-root", "/vagrant", ".", :nfs => true)

						config.vm.provision :chef_client do |chef|
							chef.chef_server_url = "https://api.opscode.com/organizations/ORGANIZATION"
							chef.validation_key_path = "/Users/USERNAME/.chef/ORGANIZATION-validator.pem"
							chef.environment = "development"
							chef.node_name = "vm-development"
							chef.validation_client_name = "ORGANIZATION-validator"
							chef.client_key_path = "/Users/USERNAME/.chef/USERNAME.pem"
							chef.run_list = ["recipe[foo]", "role[bar]"]
						end
					end
				]]></script>
